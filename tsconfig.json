{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20.10.0",
  "_version": "20.10.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",

    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
