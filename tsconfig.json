{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20.10.0",
  "_version": "20.10.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",

    "emitDeclarationOnly": true, // TS vai ser usado somente para emitir as declarações. Não será usado para build
    "allowImportingTsExtensions": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}